<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>

  <body>
    <div id="wrapper">
      <% include ../partials/sidebar %>
      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <% include ../partials/topbar %>
          <div class="container">
            <!-- Outer Row -->
            <div class="row justify-content-center">
              <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                  <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                  
                    
                        <div class="p-5">
                          <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">
                              Update Merchant
                            </h1>
                          </div>
                          <form
                            action="/admin/merchant/update/<%= merchant.sys_merchant_id %>"
                            method="POST"
                          >
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control form-control-user"
                                name="sys_merchant_id"
                                id="sys_merchant_id"
                                value="<%= merchant.sys_merchant_id %>"
                                disabled
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control form-control-user"
                                name="pcms_merchant_id"
                                id="pcms_merchant_id"
                                value="<%= merchant.pcms_merchant_id %>"
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control form-control-user"
                                name="name"
                                id="name"
                                value="<%= merchant.merchant_name %>"
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="email"
                                class="form-control form-control-user"
                                name="email"
                                id="email"
                                aria-describedby="emailHelp"
                                value="<%= merchant.merchant_email %>"
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control form-control-user"
                                name="phone_number"
                                id="phone_number"
                                value="<%= merchant.merchant_phone_number %>"
                              />
                            </div>

                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control form-control-user"
                                name="apikey"
                                id="apikey"
                                value="<%= merchant.api_key %>"
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control form-control-user"
                                name="orgkey"
                                id="orgkey"
                                value="<%= merchant.org_key %>"
                              />
                            </div>
                            <div class="form-group">
                              <input
                                type="text"
                                class="form-control form-control-user"
                                name="address"
                                id="address"
                                value="<%= merchant.address %>"
                              />
                            </div>
                            <div class="form-group">
                              <select
                                class="form-control form-control-user"
                                id="status"
                                name="status"
                              >
                                <option value="active" selected>Active</option>
                                <option value="inactive">Inactive</option>
                              </select>
                            </div>
                            <div class="row">
                              <div class="col-sm-6 mb-3 mb-sm-0">
                                <input
                                  class="btn btn-primary butn-user btn-block"
                                  type="submit"
                                  value="Update"
                                />
                              </div>
                            </div>
                          </form>
                          <hr />
                          <div class="text-center">
                            <a class="small" href="/admin/merchant/view"
                              >Back to Merchant Management</a
                            >
                          </div>
                        </div>
                     
                   
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% include ../partials/scripts %>
  </body>
</html>

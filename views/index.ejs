<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
</head>

<body class="container">

    <form action="/results" method="post" class="mx-auto w-50">

        <h2 class="text-center">Please fill your information</h2>
        <input type="hidden" value="12345" id="psid">
        <!-- User Info div -->
        <div class="block" id="user-info">
            <!-- <input type="hidden" name="psid"> -->
            <div class="form-group">
              <label for="Username">Your Name</label>
              <input type="text" class="form-control" id="Name" placeholder="Enter Your Name">
            <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>

            <div class="form-group">
              <label for="age">Your Age</label>
              <input type="text" class="form-control" id="age" placeholder="Enter Your Age">
            <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
               

            <div class="form-group">
              <label for="gender">Gender</label>
              <select class="form-control" id="gender">
                <option>Male</option>
                <option>Female</option>
               
              </select>
            </div>
              <div class="form-group">
            <label for="phonenumber">Your Phone Number</label>
            <input type="phonenumber" class="form-control" id="phonenumber" placeholder="Enter your Phone Number">
            </div>
       
        <label for="stateNDiv">State And Division</label>
        <select class="form-control" id="stateNDiv">
          <option selected>Select State and Division</option>
        </select>
    
        <div class="form-group">
        <label for="township">Township</label>
        <select class="form-control" id="township">
          <option selected>Select Township</option>
        </select>
      </div>
        

        <button type="button" id="nextBtn1" 
        class="bg-gradient-to-r from-teal-400 to-blue-500 text-gray-100 mt-4 text-sm px-3 py-2 w-full rounded">
          Next
        </button>
      </div>


      <!-- 2User Info copy div -->
       <div class="hidden" id="product">
        <div class="text-left mt-2">
          <label for="product" class="text-xl text-base py-4 text-black-700 flex space-y-2 text-center">Choose Your Product:</label>

      </div>
         


            <button type="button" id="prevBtn1" class="bg-gradient-to-r from-teal-400 to-blue-500 text-gray-100 mt-4 text-sm px-3 py-2 w-full rounded">
            Previous
          </button>
            <button type="button" id="nextBtn2" class="bg-gradient-to-r from-teal-400 to-blue-500 text-gray-100 mt-4 text-sm px-3 py-2 w-full rounded">
            Next
          </button>
        </div>




        <!-- 3User Info copy div -->
        <div class="hidden" id="luckydraw-form">
            <div class="text-left mt-2">
                <label for="luckydraw" class="text-xs text-gray-700">Luckydraw Code</label
          ><input
            type="text"
            name="luckydraw"
            id="luckydraw"
            class="block w-full bg-gray-200 border border-gray-400 text-sm px-2 py-1 rounded focus:outline-none focus:bg-gray-100 focus:border-gray-500"
            placeholder="Enter your Luckydraw code"
          />
        </div>
        <button
          type="button"
          id="prevBtn2"
          class="bg-gradient-to-r from-teal-400 to-blue-500 text-gray-100 mt-4 text-sm px-3 py-2 w-full rounded"
        >
          Previous
        </button>
        <button
          type="submit" id="submitButton" onclick="getPsid()"
          
          class="bg-gradient-to-r from-teal-400 to-blue-500 text-gray-100 mt-4 text-sm px-3 py-2 w-full rounded"
        >
          Submit
        </button>
        </div>
        
      
    </form>

    
    <% include ./partials/script %>
    <script>
    function getPsid(){
      (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {
                return;
            }
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'Messenger'));
                    // the Messenger Exstensions JS SDK is done loading

        MessengerExtensions.getContext('2670682636552520',
                function success(thread_context) {
                    document.getElementById("psid").value = thread_context.psid;
                    console.log()
                },
                function error(err) {
                    console.log("Something went wrong");
                }
            );
    }       
    </script>
</body>

</html>
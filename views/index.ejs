<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/head %>
</head>

<body class="container">

  <form action="/results" method="post" class="mx-auto w-50">
    <div class="container mx-auto w-50 pt-4" id="one">
      <h2>Fill Your Information </h2>
      <div class="form-group">
        <label for="Username">Your Name</label>
        <input type="text" class="form-control" id="Name" placeholder="Enter Your Name">
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>

      <div class="form-group">
        <label for="age">Your Age</label>
        <input type="text" class="form-control" id="age" placeholder="Enter Your Age">
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>


      <div class="form-group">
        <label for="gender">Gender</label>
        <select class="form-control" id="gender">
          <option>Male</option>
          <option>Female</option>
        </select>
      </div>
      <div class="form-group">
        <label for="phonenumber">Your Phone Number</label>
        <input type="phonenumber" class="form-control" id="phonenumber" placeholder="Enter your Phone Number">
      </div>

      <label for="stateNDiv">State And Division</label>
      <select class="form-control" id="stateNDiv">
        <option selected>Select State and Division</option>
      </select>

      <div class="form-group">
        <label for="township">Township</label>
        <select class="form-control" id="township">
          <option selected>Select Township</option>
        </select>
      </div>

      <div class="col-md-12 text-center">
        <!-- <button type="button" class="btn btn-outline-primary" id="nextBtn1" onclick="demoVisibilityone()"> Next
        </button> -->
        <button type="button" id="SubmitBtn" class="btn btn-outline-primary"> Submit </button>
      </div>

    </div>

    
    <input type="hidden" id="psid"m value="">
  </form>


  <% include ./partials/script %>
  <script>
    (function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {
        return;
      }
      js = d.createElement(s);
      js.id = id;
      js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'Messenger'));
    // the Messenger Exstensions JS SDK is done loading
    window.extAsyncInit = function () {
      MessengerExtensions.getContext('2670682636552520',
        function success(thread_context) {
          document.getElementById("psid").value = thread_context.psid;
        },
        function error(err) {
          console.log("Something went wrong");
        }
      );
    };
  </script>
</body>

</html>